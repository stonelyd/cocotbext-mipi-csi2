modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["ghdl", "swig", "verilog"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CSI-2 Extension Setup"

[[workflows.workflow]]
name = "CSI-2 Extension Setup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pip install --upgrade pip && pip install -e . && pip install pytest cocotb-test && python -c \"import cocotbext.csi2; print('CSI-2 extension loaded successfully'); print(f'Version: {cocotbext.csi2.__version__}')\""
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python -m pip install --upgrade pip && pip install -e . && pip install pytest cocotb-test && python -c \"import cocotbext.csi2; print('CSI-2 extension loaded successfully'); print(f'Version: {cocotbext.csi2.__version__}')\""]
